<%- include ("./partials/header") %>
<h1>Specific Blog</h1>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <img src="<%=blog.source%>" class="card-img-top" alt="Blog post with image.">
        <h4> <%=blog.name%> </h4>
        <h4> <%=blog.year%> </h4>
        <h4> <%=blog.medium%> </h4>
        <% if (blog.comments.length <= 0) { %>
        <em>There are no commnets on this blog.</em> 
    <% } else { %>
        <% blog.comments.forEach((comment) => { %>
            <h5> <%=comment.text%> </h5>
        <% }) }%>

        

    </div>
  </div>
  


<%- include ("./partials/footer") %>